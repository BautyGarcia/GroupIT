generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id             String           @id @default(cuid())
  nombreUsuario  String           @unique
  mail           String           @unique
  nombre         String
  apellido       String
  edad           Int
  password       String
  CosasTraidas   CosasTraidas[]
  eventos        Eventos[]
  usuarioEventos UsuarioEventos[]
  proveedores    Proveedores[]
}

model Eventos {
  id               String             @id @default(cuid())
  nombre           String             @unique
  descripcion      String
  fecha            DateTime
  lugar            String
  usuarioId        String
  usuario          Usuario            @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  CosasTraer       CosasTraer[]
  CosasTraidas     CosasTraidas[]
  eventosProveedor EventosProveedor[]
  usuarioEventos   UsuarioEventos[]
}

model Proveedores {
  id               String             @id @default(cuid())
  nombre           String             @unique
  tipoServicio     TipoServicio       @default(Undefined)
  personasMinimas  Int
  precio           Int
  contacto         String
  eventosProveedor EventosProveedor[]
  usuario          Usuario            @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId        String
}

model UsuarioEventos {
  id           String  @id @default(cuid())
  confirmacion Boolean
  idUsuario    String
  idEvento     String
  evento       Eventos @relation(fields: [idEvento], references: [id], onDelete: Cascade)
  usuario      Usuario @relation(fields: [idUsuario], references: [id], onDelete: Cascade)
}

model EventosProveedor {
  id          String      @id @default(cuid())
  idEvento    String
  idProveedor String
  evento      Eventos     @relation(fields: [idEvento], references: [id], onDelete: Cascade)
  proveedor   Proveedores @relation(fields: [idProveedor], references: [id], onDelete: Cascade)
}

model CosasTraer {
  id           String  @id @default(cuid())
  nombreObjeto String?
  cantidad     Int?
  idEvento     String
  evento       Eventos @relation(fields: [idEvento], references: [id], onDelete: Cascade)
}

model CosasTraidas {
  id           String   @id @default(cuid())
  nombreObjeto String?
  cantidad     Int?
  idEvento     String
  idUsuario    String?
  evento       Eventos  @relation(fields: [idEvento], references: [id], onDelete: Cascade)
  usuario      Usuario? @relation(fields: [idUsuario], references: [id], onDelete: Cascade)
}

enum TipoServicio {
  Undefined
  Catering
  Muebles
  Organizacion
  Entretenimiento
  EntretenimientoInfantil
  Otros
}
